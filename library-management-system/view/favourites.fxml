<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.FavouritesController" alignment="center" spacing="10" styleClass="root">
    <HBox alignment="center" spacing="10">
        <Label text="Patron ID:" />
        <TextField fx:id="IDTf"/>
	<Button fx:id="showBtn" text="Show Favourites" disable="true" onAction="#handleShowFavourites"/>
    </HBox>
    <Text fx:id="patronTxt" text="No Patron Selected" />
    <ListView fx:id="favouritesLv" prefHeight="100" />
    <Button fx:id="closeBtn" text="Close" onAction="#handleClose"/>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
