<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LibraryController" alignment="center" spacing="10" styleClass="root">   
    <HBox spacing="10">
    <ImageView> <image> <Image url="@UTS-logo.jpg"/> </image> </ImageView>
        <Text styleClass="heading" text="${'Library\nManagement\nSystem'}"/>
    </HBox>
        <Button fx:id="catalogueBtn" text="Explore Catalogue" onAction="#handleViewCatalogue" />
        <Button fx:id="patronRecordBtn" text="View Patron Record" onAction="#handleViewRecord" />
        <Button fx:id="favouritesBtn" text="View Favourite Books" onAction="#handleViewFavourites"/>
        <Button fx:id="adminBtn" text="Enter Administration Mode" onAction="#handleViewAdmin" />
        <Button fx:id="exitBtn" text="Exit" onAction="#handleExit" />
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
